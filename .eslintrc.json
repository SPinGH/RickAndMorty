{
    "plugins": ["simple-import-sort"],
    "extends": "next/core-web-vitals",
    "rules": {
        "no-console": "warn",
        "no-debugger": "warn",
        "no-alert": "warn",
        "import/first": "warn",
        "import/newline-after-import": "warn",
        "import/no-duplicates": "warn",
        "simple-import-sort/exports": "warn",
        "simple-import-sort/imports": [
            "warn",
            {
                "groups": [
                    ["^@?\\w"],
                    ["^@/(\\.{1,2}/?)*[^.]+$"],
                    ["^(\\.{1,2}/?)+[^\\.]*$"],
                    ["^@/.+\\."],
                    ["^\\./.+\\.scss$"]
                ]
            }
        ]
    }
}
